<!DOCTYPE html>
<html>
    <head>
        <title>Tickets</title>
    </head>
    <body>
        <h1>Tickets</h1>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% tickets.forEach(function(ticket) { %>
                    <tr>
                        <td><%= ticket.id %></td>
                        <td><%= ticket.title %></td>
                        <td><%= ticket.description %></td>
                        <td><%= ticket.status %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </body>
</html>
