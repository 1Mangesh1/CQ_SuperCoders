<!DOCTYPE html>
<html>
    <head>
        <title>Ticket Details</title>
    </head>
    <body>
        <h1>Ticket Details</h1>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= ticket.id %></td>
                    <td><%= ticket.title %></td>
                    <td><%= ticket.desc %></td>
                    <td><%= ticket.status %></td>
                    <td><img src="/tupload/<%= ticket.ticimg %>" alt="Ticket Image" width="100px"></td>
                </tr>
            </tbody>
        </table>
        <button onclick="window.location.href='/chat'">Chat Now</button>
    </body>
</html>
